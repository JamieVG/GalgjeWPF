<Window
    x:Class="GalgjeWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalgjeWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Galgje"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="500"
    mc:Ignorable="d">
    <DockPanel Background="Crimson" LastChildFill="True">
        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />


            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Name="imageOutput" Grid.Row="1" Grid.RowSpan="2">
                
            </Grid>
            <Image
                Grid.RowSpan="4"
                Grid.ColumnSpan="2"
                Source="/assests/achtergrond.jpg"
                Stretch="UniformToFill" />
            <TextBox
                Name="txtTextDisplay"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="1"
                Margin="20"
                HorizontalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                FontSize="20"
                Foreground="Crimson"
                TextWrapping="Wrap">
                Start een nieuw spel
            </TextBox>
            <TextBox
                Name="txtInput"
                Grid.Row="3"
                Grid.Column="0"
                Height="70"
                Margin="150,20,0,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="White"
                FontSize="40"
                Foreground="Crimson"
                Opacity="0.5"
                TextAlignment="Center" />
            <TextBox
                Name="txtWoord"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="40"
                Foreground="Crimson"
                Background="Black"
                TextAlignment="Center"
                Visibility="Hidden">
            </TextBox>
            <Button
                Name="btnRaad"
                Grid.Row="3"
                Grid.Column="1"
                Height="70"
                Margin="60,20"
                Background="Black"
                Click="btnRaad_Click"
                FontSize="20"
                Foreground="Crimson"
                Visibility="Hidden"
                MouseEnter="btnRaad_MouseEnter"
                MouseLeave="btnRaad_MouseLeave">
                Raad
            </Button>
            <Button
                Name="btnNieuwSpel"
                BorderThickness="4"
                BorderBrush="Black"
                Grid.Row="0"
                Grid.Column="1"
                Height="70"
                Margin="60,20"
                Background="Black"
                Click="btnNieuwSpel_Click"
                FontSize="20"
                Foreground="Crimson"
                MouseEnter="btnNieuwSpel_MouseEnter"
                MouseLeave="btnNieuwSpel_MouseLeave">
                Nieuw Spel
            </Button>
            <Button
                Name="btnVerberg"
                Grid.Row="3"
                Grid.Column="1"
                Height="70"
                Margin="60,20"
                Background="Black"
                Click="btnVerberg_Click"
                FontSize="20"
                Foreground="Crimson"
                MouseEnter="btnVerberg_MouseEnter"
                MouseLeave="btnVerberg_MouseLeave">
                Verberg woord
            </Button>
        </Grid>
    </DockPanel>
</Window>
