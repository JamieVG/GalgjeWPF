<Window
    x:Class="GalgjeWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GalgjeWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Galgje"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="500"
    mc:Ignorable="d">
    <DockPanel
        Name="dockPanel"
        LastChildFill="True">
        <Grid DockPanel.Dock="Right">
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />


            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/assests/Image02.jpg">
                </ImageBrush>
            </Grid.Background>
            <Image
                Grid.RowSpan="4"
                Grid.ColumnSpan="2"
                Stretch="UniformToFill" />
            
            <TextBox
                Name="txtInput"
                Grid.Row="4"
                Grid.Column="0"
                Height="70"
                Margin="150,20,0,10"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="White"
                FontSize="40"
                Foreground="Crimson"
                Opacity="0.5"
                TextAlignment="Center" />
            <TextBox
                Name="txtWoord"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Black"
                FontSize="40"
                Foreground="Crimson"
                TextAlignment="Center"
                Visibility="Hidden" />
            <Label
                Name="btnRaad"
                Grid.Row="4"
                Grid.Column="1"
                Margin="40,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="Black"
                BorderBrush="Crimson"
                BorderThickness="4"
                Cursor="Hand"
                FontSize="20"
                Foreground="Crimson"
                MouseDown="btnRaad_Click"
                MouseEnter="btnAll_MouseEnter"
                MouseLeave="btnAll_MouseLeave"
                Visibility="Hidden">
                Raad
            </Label>


            <Label
                Name="btnNieuwSpel"
                Grid.Row="0"
                Grid.Column="1"
                Margin="50,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="Black"
                BorderBrush="Crimson"
                BorderThickness="4"
                Cursor="Hand"
                FontSize="20"
                Foreground="Crimson"
                MouseDown="btnNieuwSpel_Click"
                MouseEnter="btnAll_MouseEnter"
                MouseLeave="btnAll_MouseLeave">
                Nieuw Spel
            </Label>
            <Label
                Name="btnVerberg"
                Grid.Row="4"
                Grid.Column="1"
                Margin="50,20"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Background="Black"
                BorderBrush="Crimson"
                BorderThickness="4"
                Cursor="Hand"
                FontSize="20"
                Foreground="Crimson"
                MouseDown="btnVerberg_Click"
                MouseEnter="btnAll_MouseEnter"
                MouseLeave="btnAll_MouseLeave">
                Verberg woord
            </Label>
            <TextBox
                Name="lblTimer"
                Grid.Row="4"
                Grid.Column="0"
                Margin="10"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Background="Black"
                FontSize="40"
                Foreground="Crimson"
                Visibility="Hidden" />
            <TextBox
                Name="txtTijdOp"
                Grid.Row="3"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="Red"
                BorderThickness="0"
                FontSize="50px"
                Foreground="Black"
                TextWrapping="Wrap"
                Visibility="Hidden" />
            <Grid
                Name="imageOutput"
                Grid.Row="1"
                Grid.RowSpan="2"
                Grid.Column="0" />
            <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3">
                <Grid.Background >
                    <ImageBrush Stretch="fill" ImageSource="/assests/Paper01.png" />
 
                </Grid.Background>
            </Grid>
            <TextBox
                Name="txtTextDisplay"
                Grid.Row="1"
                Grid.RowSpan="3"
                Grid.Column="1"
                Margin="20"
                Padding="10 30"
                HorizontalAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                FontSize="15"
                Foreground="Black"
                TextWrapping="Wrap">
                Start een nieuw spel
            </TextBox>
        </Grid>
    </DockPanel>
</Window>
