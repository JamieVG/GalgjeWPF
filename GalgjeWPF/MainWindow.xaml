<Window x:Class="GalgjeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GalgjeWPF"
        mc:Ignorable="d"
        Title="Galgje" Height="450" Width="800" MinWidth="600">
    <DockPanel LastChildFill="True" Background="Crimson">

        <Grid DockPanel.Dock="Right">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>

            <TextBox Name="txtTextDisplay" Margin="20" Background="Crimson"  FontSize="40" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Center" BorderThickness="0">Start een nieuw spel</TextBox>
            <TextBox HorizontalAlignment="Stretch" Visibility="Hidden" Background="Black" Foreground="Crimson" FontSize="40" Height="70" Margin="60,20" Name="txtInput" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center"></TextBox>

            <Button Background = "Black" Foreground="Crimson" FontSize="20" Name="btnRaad" Margin="60,20" Visibility="Hidden" Grid.Column="1" Grid.Row="3" Click="btnRaad_Click" >Raad</Button>
            <Button Background = "Black" Foreground="Crimson" FontSize="20" Name="btnNieuwSpel" Margin="60,20" Grid.Column="1" Grid.Row="0" Click="btnNieuwSpel_Click">Nieuw Spel</Button>
            <Button Background = "Black" Foreground="Crimson" FontSize="20" Name="btnVerberg" Margin="60,20" Visibility="Hidden" Grid.Column="1" Grid.Row="1" Click="btnVerberg_Click">Verberg woord</Button>

        </Grid>

    </DockPanel>
</Window>
